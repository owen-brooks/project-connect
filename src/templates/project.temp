<!DOCTYPE html>
<html>
    <head>
        <title>Project</title>
        <meta charset="UTF-8" />
        <meta name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>  
        <script src="./common.js"></script>
        <link rel="stylesheet" type="text/css" href="styles.css">
    </head>
    <body style="color:white">
        <div id="nav-placeholder"></div>

        <h1>{{title}}</h1>
        <div id="update"></div>
        
        <h2>Project Description:</h2>
        <div id="description">{{description}}</div>

        <h2>Skills Needed:</h2>
        <div id="skills"></div>
        <div id=add>
        <button type="button" id="add" class="btn btn-primary" onclick="connect()">Connect to Project</button>
        </div>


    </body>
    <script>
        // Load the navigation bar
        $(function(){
            $("#nav-placeholder").load("nav.html");
        });

        function transformSkillList(){
        /**
         * Purpose:
         *   transform comma seperated list into bullet form
         */
            var html = "<ul>";
            var skillStr = "{{skillsNeeded}}";
            skillList = skillStr.split(',');
            for(skill of skillList){
                html += "<li>"+skill+"</li>";
            }
            html += "</ul>";
            $('#skills').html(html);
        }

        $(document).ready(function(){
            // Skill list
            transformSkillList();

            // Update Time
            var dateUpdate = new Date("{{lastUpdated}}");
            var owner = "{{owner}}";
            html = "Last Update: "+dateUpdate.toLocaleDateString();
            html += "<br/>Owner: "+owner;
            $('#update').html(html);
        });

        function connect(){
            var projID = getUrlVars()["projectID"];
            var connectinfo = prompt("Enter connection details");
            var URL = "/api/connect"; 
         	$.ajax({ 
         		type: "POST",  
         		url : URL, 
                data: {projectID: projID, info: connectinfo},
         		success : function(msg){ 
                    //console && console.log( msg ); 
                    alert(msg);
         		},
         		error: function(jgXHR, textStatus,errorThrown){ 
         			alert("Error: " + textStatus + " " + errorThrown);
         		}
         	}); 
        }

    </script>
</html>